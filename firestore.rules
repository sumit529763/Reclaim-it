rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow users to read all public data (like lost/found reports)
    match /reports/{reportId} {
      allow read: if true;  // anyone can see reports
      allow create: if request.auth != null 
                    && request.auth.uid == request.resource.data.uid;
      allow update, delete: if request.auth != null
                            && request.auth.uid == resource.data.uid;
    }

    // User profiles (each user can only see & edit their own profile)
    match /users/{userId} {
      allow read: if request.auth != null; // optional: or userId == request.auth.uid
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
